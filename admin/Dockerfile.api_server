FROM golang:1.10.4
WORKDIR /go/src/github.com/arunscape/friends
RUN go get github.com/go-sql-driver/mysql
RUN go get github.com/dgrijalva/jwt-go
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o api_server apps/api_server/main.go


FROM alpine:latest
WORKDIR /root/
COPY --from=0 /go/src/github.com/arunscape/friends/api_server .
CMD ["./api_server"]

